# 数据库配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/shortlink
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shortlink
DB_USER=root
DB_PASSWORD=password

# JWT配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 服务器配置
HOST=0.0.0.0
PORT=9848
DEBUG=True
RELOAD=True

# 短链接配置
DEFAULT_DOMAIN=localhost:9848
SHORT_LINK_MIN_LENGTH=4
SHORT_LINK_MAX_LENGTH=10
ALLOW_CUSTOM_CODE=True

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=False

# 速率限制
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# 文件上传
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# 管理员默认账号
ADMIN_EMAIL=admin@shortlink.com
ADMIN_PASSWORD=admin123456

# 跨域配置
CORS_ORIGINS=["http://localhost:8848", "http://0.0.0.0:8848"]
CORS_ALLOW_CREDENTIALS=True
